<header>
  <h1>
    Chat <%= @chat.session_id %>
  </h1>
</header>

<%= button_to "Create Chat", chats_path, method: :post, data: { turbo: false } %>

<div>
  Messages go here
</div>

<div>
  <form method="POST" action="/chat_messages">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
    <textarea name="chat_message[content]"></textarea>

    <div>
      <button type="submit">
        Send
      </button>
    </div>
  </form>
</div>
