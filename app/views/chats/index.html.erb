<div class="sm:px-8 mt-16 sm:mt-32 w-full">
  <div class="mx-auto max-w-7xl lg:px-8">
    <div class="relative px-4 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <header class="max-w-2xl">
          <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text=5xl">
            Chats with me
          </h1>
        </header>

        <div class="mt-16 sm:mt-20">
          <%= button_to "Create Chat", chats_path, method: :post, data: { turbo: false }, class: "rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          <div class="md:border-l md:border-zinc-100 md:pl-6 md:dark:border-zinc-700/40 mt-4">
            <div class="flex max-w-3xl flex-col space-y-16">
              <% @chats.each do |chat| %>
                <article class="md:grid md:grid-cols-4 md:items-baseline">
                  <div class="md:col-span-3 group relative flex flex-col items-start">
                    <h2 class="text-base font-semibold tracking-tight text-zinc-800 dark:text-zinc-100">
                      <a href="<%= chat_path(chat) %>">
                        <span class="absolute -inset-y-6 -inset-x-4 z-20 sm:-inset-x-6 sm:rounder-2xl"></span>
                        <span class="relative z-10"><%= chat.session_id %></span>
                      </a>
                    </h2>
                    <time class="md:hidden relative z-10 order-first mb-3 flex items-center text-sm text-zinc-400 dark:text-zinc-500 pl-3.5" datetime="2022-09-05">
                      <span class="absolute inset-y-0 left-0 flex items-center" aria-hidden="true">
                        <span class="h-4 w-0.5 rounded-full bg-zinc-200 dark:bg-zinc-500"></span>
                      </span>
                      <%= long_date(chat.created_at) %>
                    </time>
                    <p class="relative z-10 mt-2 text-sm text-zinc-600 dark:text-zinc-400">
                      <%= chat.chat_messages.first&.content&.truncate(100) %>
                    </p>
                    <div aria-hidden="true" class="relative z-10 mt-4 flex items-center text-sm font-medium text-teal-500">
                      Read chat
                      <svg>

                      </svg>
                    </div>
                  </div>
                </article>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
