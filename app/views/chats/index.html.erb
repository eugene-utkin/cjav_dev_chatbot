<div class="sm:px-8 mt-16 sm:mt-32">
  <div class="mx-auto max-w-7xl lg:px-12">
    <header>
      <h1>
        Chats with me
      </h1>
    </header>

    <%= button_to "Create Chat", chats_path, method: :post, data: { turbo: false } %>

    <div>
      <% @chats.each do |chat| %>
        <div>
          <h2>
            <a href="<%= chat_path(chat) %>">
              <%= chat.session_id %>
            </a>
          </h2>
        </div>
      <% end %>
    </div>
  </div>
</div>
