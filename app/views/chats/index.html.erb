<div class="sm:px-8 mt-16 sm:mt-32 w-full">
  <div class="mx-auto max-w-7xl lg:px-8">
    <div class="relative px-4 sm:px-8 lg:px-12">
      <div class="mx-auto max-w-2xl lg:max-w-5xl">
        <header class="max-w-2xl">
          <h1 class="text-4xl font-bold tracking-tight text-zinc-800 dark:text-zinc-100 sm:text=5xl">
            Chats with me
          </h1>
        </header>

        <div class="mt-16 sm:mt-20">
          <%= button_to "Create Chat", chats_path, method: :post, data: { turbo: false }, class: "rounded-md bg-indigo-600 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          <div class="md:border-l md:border-zinc-100 md:pl-6 md:dark:border-zinc-700/40 mt-4">
            <div class="flex max-w-3xl flex-col space-y-16">
              
            </div>
          </div>

          <div class="mt-8">
            <% @chats.each do |chat| %>
              <div>
                <h2>
                  <a href="<%= chat_path(chat) %>">
                    <%= chat.session_id %>
                  </a>
                </h2>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
